@page "/"

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {font-family: Arial, Helvetica, sans-serif;}
form {border: 3px solid #f1f1f1;   
background-color: rgb(255,254,225);
}

h1{
    color:rgb(255,254,225);
}
h6{
    color:rgb(	0, 35, 102);
}
input[type=text], input[type=password] {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
}
body{
    background-color:rgb(255,254,225);
}
button {
    align:center;
  background-color: rgb(255,254,225);
  padding: 14px 20px;
  text: rgb(0,35,102),
  margin: 8px 0;
  border: none;
  cursor: pointer;
  filter: drop-shadow(1px 1px 1px rgba(0.25, 0.25, 0.25, 0.25));
  width: 20%;
  border-radius: 8px;
}

button:hover {
  opacity: 0.8;
}

.cancelbtn {
  width: auto;
  padding: 10px 18px;
  background-color: #f44336;
}

.imgcontainer {
  text-align: center;
  margin: 24px 0 12px 0;
}

img.avatar {
  width: 40%;
  border-radius: 50%;
}

.container {
  padding: 16px;
}

span.psw {
  float: right;
  padding-top: 16px;
}

@@media screen and (max-width: 300px) {
  span.psw {
     display: block;
     float: none;
  }
  .cancelbtn {
     width: 100%;
  }
}

.card {
  box-shadow: 0 4px 8px 0 rgb(0,0,0,0.2);
  transition: 0.3s;
  background:rgb(255,254,225);
  width: 60%;
  margin:  0px auto;

}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
}
.topnav-right {
  float: right;
}

.topnav {
  overflow: hidden;
  background-color:rgb(	0, 35, 102);
  border-radius: 30px;    
  
}

.topnav a {
  float: left;
  color: rgb(	0, 35, 102);
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: rgb(	0, 35, 102);
  color: black;
}

.topnav :hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.topnav a.active {
  background-color: rgb(	0, 35, 102);
  color: white;
}
</style>
</head>
<body >
    
<div class="topnav">
<h1>DlvrMe-Login</h1>
</div>
 <br>
<div class="card">
  <div class="container">
    <label for="uname"><h6><b>Username</b></h6></label>
    <input type="text" placeholder="Enter Username" required>

    <label for="psw"><h6><b>Password</b></h6></label>
    <input type="password" placeholder="Enter Password" required>
        
    <button type="submit">Login</button>

  </div>
  </div>



</body>
</html>


